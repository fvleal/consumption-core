{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@domain/*": ["domain/*"],
      "@application/*": ["application/*"],
      "@ports/*": ["ports/*"],
      "@test/*": ["test/*"],
      "@libs/*": ["libs/*"]
    }
  },
  "include": ["src"]
}
